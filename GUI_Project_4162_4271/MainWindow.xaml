<Window x:Class="GUI_Project_4162_4271.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Project_4162_4271"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightYellow" Offset="0.0" />
            <GradientStop Color="LightCyan" Offset="0.5" />
            <GradientStop Color="LightGray" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        
        <Button Content="Click Here to Login" Width="200" Height="60" Grid.Row="5"
        Background="#2196F3" Foreground="White" BorderBrush="#2196F3"
        FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
        Padding="10" Margin="0,20" Click="Button_Click"/>


    </Grid>
</Window>
